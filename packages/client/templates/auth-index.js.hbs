const axios = require('axios');
const set = require('lodash/set');
const merge = require('lodash/merge');

const getTokenFunctions = [
{{#each getTokenFunctions}}
  {{#if context}}
    ['{{context}}.{{name}}', require('./{{context}}-{{name}}')],
  {{else}}
    ['{{name}}', require('./{{name}}')],
  {{/if}}
{{/each}}
];
const subResourceFunctions = [
{{#each subResourceFunctions}}
  {{#if context}}
    ['{{context}}.{{name}}', '{{id}}/{{subResource}}'],
  {{else}}
    ['{{name}}', '{{id}}/{{subResource}}'],
  {{/if}}
{{/each}}
];

module.exports = (clientID, getSocket) => merge(
  {},
  getTokenFunctions.reduce(
    (acc, [name, fn]) => set(acc, name, (...args) => fn(clientID, getSocket, ...args)),
    {}
  ),
  subResourceFunctions.reduce(
    (acc, [path, resource]) => set(acc, path, (token) => axios.post(`{{apiBaseUrl}}/auth-providers/${resource}`, { clientID, token }, { headers: { 'X-PolyApiKey': '{{apiKey}}' } }).then(({ data }) => data)),
    {}
  )
);
