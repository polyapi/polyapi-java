const axios = require('axios');
const set = require('lodash/set');
const merge = require('lodash/merge');

const functions = [
{{#each specifications}}
  {{#if context}}
    ['{{context}}.{{name}}', '{{id}}'],
  {{else}}
    ['{{name}}', '{{id}}'],
  {{/if}}
{{/each}}
];

module.exports = (clientID) => merge(
  {},
  functions.reduce(
    (acc, [path, id]) => set(acc, path, (...args) => axios.post(`{{apiBaseUrl}}/functions/url/${id}/execute`, { clientID, args }).then(({ data }) => data)),
    {}
  )
);
